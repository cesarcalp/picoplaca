@model VerificatorViewModel
@{
    ViewData["Title"] = "Pico y Placa Predictor";
}
<div class="row-fluid">
    <form asp-action="Index" asp-controller="Home" method="post" id="formGenericEdit" class="form-horizontal" role="form">
        <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger"></div>
        <div class="form-group">
            <label asp-for="PlateNumber" class="col-md-3 control-label"></label>
            <div class="col-md-9">
                <input asp-for="PlateNumber" class="form-control" autocomplete="off" />
                <span asp-validation-for="PlateNumber" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Date" class="col-md-3 control-label"></label>
            <div class="col-md-9">
                <input asp-for="Date" type="date" class="form-control" autocomplete="off" />
                <span asp-validation-for="Date" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Time" class="col-md-3 control-label"></label>
            <div class="col-md-9">
                <input asp-for="Time" type="time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger" />
            </div>
        </div>
        <div class="row-fluid">
            <div class="col-md-offset-2 text-left">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o" aria-hidden="true"></i> Summit
                </button>
            </div>
        </div>
        <br />
        <div class="alert @ViewBag.MessageType" style="display:@ViewBag.DisplayMessage;" >
            @ViewBag.Message
        </div>
    </form>
</div>
